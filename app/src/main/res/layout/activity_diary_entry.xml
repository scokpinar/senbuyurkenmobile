<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.sam.senbuyurkenmobile.DiaryEntryActivity">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:nestedScrollingEnabled="true"
            android:showDividers="none"
            android:stretchColumns="0"
            android:weightSum="30">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingTop="5dp">

                <EditText
                    android:id="@+id/entry_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:hint="@string/diary_entry_title"
                    android:inputType="text"
                    android:maxLength="256"
                    android:paddingLeft="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="27"
                android:gravity="center_vertical"
                android:paddingTop="5dp">

                <EditText
                    android:id="@+id/diary_entry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:hint="@string/diary_entry_text"
                    android:inputType="textMultiLine"
                    android:maxLength="1024"
                    android:minHeight="100dp"
                    android:minLines="10"
                    android:paddingLeft="5dp"
                    android:scrollbars="horizontal|vertical" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:weightSum="1">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:columnCount="5"
                    android:rowCount="1">

                    <ImageView
                        android:id="@+id/icon_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_camera" />

                    <TextView
                        android:id="@+id/char_count"
                        android:layout_column="3"
                        android:text="@string/diary_entry_text_length" />

                    <Button
                        android:id="@+id/button_save"
                        style="@style/myButtonStyle"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_column="4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/my_rounded_button"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="saveDiaryEntry"
                        android:text="@string/saveButton"
                        android:textColor="#ffffff" />


                </GridLayout>
            </TableRow>

        </TableLayout>

    </RelativeLayout>

</ScrollView>
