<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sam.senbuyurkenmobile.DiaryEntryActivity">

    <ScrollView
        android:id="@+id/diary_entry_form"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff5f5f5">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="5"
            android:weightSum="1">

            <TextView
                android:id="@+id/image_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:state_selected="true"
                android:text="Fotoğraf Seç" />

            <ImageView
                android:id="@+id/imageView"
                style="@style/myImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />

            <EditText
                android:id="@+id/diary_entry"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_margin="5dp"
                android:layout_row="3"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/diary_enty_text"
                android:inputType="textMultiLine"
                android:paddingLeft="5dp"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:layout_row="4"
                android:background="@android:color/transparent"
                android:onClick="cancelButtonClick"
                android:text="@string/cancelButton" />

            <Button
                android:id="@+id/button_save"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:layout_row="4"
                android:background="@android:color/transparent"
                android:onClick="saveDiaryEntry"
                android:text="@string/saveButton" />

        </GridLayout>

    </ScrollView>

</LinearLayout>
