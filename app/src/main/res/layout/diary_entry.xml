<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/myTextView_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.sam.senbuyurkenmobile.MyTextView
            android:id="@+id/diary_entry_title"
            style="@style/myTextViewDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:textStyle="bold|italic" />

        <com.sam.senbuyurkenmobile.MyTextView
            android:id="@+id/diary_entry_date"
            style="@style/myTextViewDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:textStyle="bold|italic" />

    </LinearLayout>


    <ImageView
        android:id="@+id/diary_entry_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="#ffffffff"
        android:minHeight="0dp"
        android:scaleType="fitXY" />

    <com.sam.senbuyurkenmobile.MyTextView
        android:id="@+id/diary_entry_content"
        style="@style/myTextViewNote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="left"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textSize="12sp" />


</LinearLayout>