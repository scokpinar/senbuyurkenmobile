<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baby_info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sam.senbuyurkenmobile.BabyInfoActivity">

    <ScrollView
        android:id="@+id/baby_info_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:showDividers="none">


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/gender_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/baby_boy_not_selected" />

                <ImageButton
                    android:id="@+id/gender_female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/baby_girl_not_selected" />

            </TableRow>


            <TableLayout
                android:paddingEnd="10dp"
                android:paddingStart="10dp">

                <TableRow>

                    <TextView
                        android:id="@+id/baby_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/baby_name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="textPersonName" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/baby_surname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/baby_surname"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/surname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="textPersonName" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:paddingEnd="10dp"
                android:paddingStart="10dp">

                <TableRow android:gravity="center_horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/birthDate"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/birthHour"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />
                </TableRow>

                <TableRow android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/birthDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:inputType="date" />

                    <EditText
                        android:id="@+id/birthHour"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:inputType="textPersonName" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:paddingEnd="10dp"
                android:paddingStart="10dp">

                <TableRow android:gravity="center_horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/birthWeight"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/birthLength"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />
                </TableRow>

                <TableRow android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/birthWeight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:inputType="numberSigned" />

                    <EditText
                        android:id="@+id/birthLength"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:inputType="numberSigned" />
                </TableRow>

            </TableLayout>


            <TableLayout
                android:paddingEnd="10dp"
                android:paddingStart="10dp">

                <TableRow android:gravity="center_horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/birthPlace"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/hospital"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

                </TableRow>

                <TableRow android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/birthPlace"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/hospital"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:inputType="textPersonName" />

                </TableRow>

            </TableLayout>


            <TableLayout
                android:paddingEnd="10dp"
                android:paddingStart="10dp">

                <TableRow android:gravity="center_horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/gynecologyDoctor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/pediatricianDoctor"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

                </TableRow>

                <TableRow android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/gynecologyDoctor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/pediatricianDoctor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:inputType="textPersonName" />

                </TableRow>

            </TableLayout>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:padding="10dp">

                <Button
                    android:id="@+id/babyInfoSaveButton"
                    style="@style/myButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="2"
                    android:background="@drawable/my_rounded_button"
                    android:text="@string/saveButton"
                    android:textColor="#FFFFFF" />
            </TableRow>

        </TableLayout>


    </ScrollView>

</RelativeLayout>
